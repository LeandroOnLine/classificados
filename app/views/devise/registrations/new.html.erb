<div class="container">
  <div class="col-md-3 col-centered col-md-push-5">
    <h2>Nova conta</h2>
    <hr />
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label "Nome" %>
        <%= f.text_field :user_name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label "Celular" %>
        <%= f.text_field :cell_phone %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" %><br />
        <% if @minimum_password_length %>
        <em>(No m√≠nimo <%= @minimum_password_length %> characteres)</em>
        <% end %><br />
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Cadastrar-se", class: "btn btn-default" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
